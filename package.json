{
  "name": "ai-roundtable",
  "version": "0.1.0",
  "description": "Multi-AI debate platform as an MCP server",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "ai-roundtable": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mnthe/ai-roundtable.git"
  },
  "bugs": {
    "url": "https://github.com/mnthe/ai-roundtable/issues"
  },
  "homepage": "https://github.com/mnthe/ai-roundtable#readme",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\" \"scripts/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\" \"scripts/**/*.ts\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepare": "npm run build",
    "prepublishOnly": "pnpm run test && pnpm run lint",
    "benchmark": "tsx scripts/benchmark/cli.ts",
    "benchmark:matrix": "tsx scripts/benchmark/cli.ts matrix",
    "benchmark:single": "tsx scripts/benchmark/cli.ts single"
  },
  "keywords": [
    "mcp",
    "ai",
    "debate",
    "claude",
    "gpt",
    "roundtable",
    "multi-agent"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "volta": {
    "node": "24.12.0"
  },
  "packageManager": "pnpm@10.28.2",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@google/genai": "^1.34.0",
    "@modelcontextprotocol/sdk": "^1.25.1",
    "@perplexity-ai/perplexity_ai": "^0.18.1",
    "commander": "^14.0.2",
    "jsonrepair": "^3.13.1",
    "openai": "^6.15.0",
    "partial-json": "^0.1.7",
    "pino": "^10.1.0",
    "sql.js": "^1.13.0",
    "yaml": "^2.8.2",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@eslint/js": "9.39.2",
    "@types/node": "25.0.9",
    "@types/sql.js": "1.4.9",
    "@typescript-eslint/eslint-plugin": "8.52.0",
    "@typescript-eslint/parser": "8.52.0",
    "@vitest/coverage-v8": "4.0.17",
    "dotenv": "^17.2.3",
    "eslint": "9.39.2",
    "eslint-config-prettier": "10.1.8",
    "pino-pretty": "^13.1.3",
    "prettier": "3.8.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "4.0.17"
  }
}
