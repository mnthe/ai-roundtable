{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "labels": [
    "dependencies"
  ],
  "rangeStrategy": "pin",
  "packageRules": [
    {
      "description": "AI SDK packages",
      "groupName": "AI SDK packages",
      "matchPackageNames": [
        "@anthropic-ai/sdk",
        "openai",
        "@perplexity-ai/perplexity_ai",
        "@google/genai"
      ]
    },
    {
      "description": "MCP SDK",
      "groupName": "MCP SDK",
      "matchPackageNames": [
        "@modelcontextprotocol/sdk"
      ]
    },
    {
      "description": "Development dependencies",
      "matchDepTypes": [
        "devDependencies"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    },
    {
      "description": "Type definitions",
      "groupName": "type definitions",
      "automerge": true,
      "matchPackageNames": [
        "@types/*"
      ]
    },
    {
      "description": "Linting and formatting",
      "groupName": "linting tools",
      "matchPackageNames": [
        "eslint",
        "prettier"
      ]
    },
    {
      "description": "Testing",
      "groupName": "testing tools",
      "matchPackageNames": [
        "vitest"
      ]
    }
  ],
  "schedule": [
    "every weekend"
  ],
  "prHourlyLimit": 3,
  "prConcurrentLimit": 5
}